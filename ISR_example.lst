0122            114            ; Init One millisecond interrupt counter.  It is a 16-bit variable made with two 8-bit parts
0122 E4         115            clr a
0123 F530       116            mov Count1ms+0, a
0125 F531       117            mov Count1ms+1, a
0127            118            ; Enable the timer and interrupts
0127 D2AD       119       setb ET2  ; Enable timer 2 interrupt
