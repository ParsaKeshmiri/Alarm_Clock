012C            125   ;---------------------------------;
012C            126   Timer2_ISR:
012C C2CF       127            clr TF2H  ; Timer 2 doesn't clear TF2H automatically. Do it in ISR
012E            128            
012E            129            ; The two registers used in the ISR must be saved in the stack
012E C0E0       130            push acc
0130 C0D0       131            push psw
0132            132            
0132            133            ; Increment the 16-bit one mili second counter
0132 0530       134            inc Count1ms+0    ; Increment the low 8-bits first
0134 E530       135            mov a, Count1ms+0 ; If the low 8-bits overflow, then increment high 8-bits
0136 7002       136            jnz Inc_Done
0138 0531       137            inc Count1ms+1
013A            138   
013A            139   Inc_Done:
013A            140            ; Check if half second has passed
013A E530       141            mov a, Count1ms+0
013C B4F41E     142            cjne a, #low(500), Timer2_ISR_done ; Warning: this instruction changes the carry flag!
013F E531       143            mov a, Count1ms+1
0141 B40119     144            cjne a, #high(500), Timer2_ISR_done
0144            145            
0144            146            ; 500 milliseconds have passed.  Set a flag so the main program knows
0144 D200       147            setb half_seconds_flag ; Let the main program know half second had passed
0146 B28C       148            cpl TR0 ; Enable/disable timer/counter 0. This line creates a beep-silence-beep-silence sound.
0148 D2A1       149            setb SOUND_OUT
014A            150            ; Reset to zero the milli-seconds counter, it is a 16-bit variable
014A E4         151            clr a
014B F530       152            mov Count1ms+0, a
014D F531       153            mov Count1ms+1, a
